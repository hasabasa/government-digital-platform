# –ü–æ–∫–∞–∑–∞—Ç—å —Å–ø—Ä–∞–≤–∫—É
help:
	@echo "–î–æ—Å—Ç—É–ø–Ω—ã–µ –∫–æ–º–∞–Ω–¥—ã:"
	@echo "üîç –ü–†–û–í–ï–†–ö–ê –ò –£–°–¢–ê–ù–û–í–ö–ê:"
	@echo "  requirements - –ü–æ–∫–∞–∑–∞—Ç—å —Ç—Ä–µ–±–æ–≤–∞–Ω–∏—è –∫ —Å–∏—Å—Ç–µ–º–µ"
	@echo "  check-deps   - –ü—Ä–æ–≤–µ—Ä–∏—Ç—å —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–Ω—ã–µ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏"
	@echo "  install      - –£—Å—Ç–∞–Ω–æ–≤–∏—Ç—å –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏"
	@echo ""
	@echo "üöÄ –ë–´–°–¢–†–´–ô –°–¢–ê–†–¢:"
	@echo "  quickstart   - –ü–æ–ª–Ω—ã–π –∑–∞–ø—É—Å–∫ (Docker + –≤—Å–µ —Å–µ—Ä–≤–∏—Å—ã)"
	@echo "  dev-local    - –ò–Ω—Å—Ç—Ä—É–∫—Ü–∏–∏ –¥–ª—è –ª–æ–∫–∞–ª—å–Ω–æ–π —Ä–∞–∑—Ä–∞–±–æ—Ç–∫–∏"
	@echo "  frontend-only- –ó–∞–ø—É—Å–∫ —Ç–æ–ª—å–∫–æ —Ñ—Ä–æ–Ω—Ç–µ–Ω–¥–∞"
	@echo ""
	@echo "üê≥ DOCKER –ö–û–ú–ê–ù–î–´:"
	@echo "  docker-up    - –ó–∞–ø—É—Å—Ç–∏—Ç—å –≤—Å–µ —Å–µ—Ä–≤–∏—Å—ã"
	@echo "  docker-down  - –û—Å—Ç–∞–Ω–æ–≤–∏—Ç—å –≤—Å–µ —Å–µ—Ä–≤–∏—Å—ã"
	@echo "  docker-logs  - –ü–æ–∫–∞–∑–∞—Ç—å –ª–æ–≥–∏ –≤—Å–µ—Ö —Å–µ—Ä–≤–∏—Å–æ–≤"
	@echo "  docker-clean - –û—á–∏—Å—Ç–∏—Ç—å Docker"
	@echo ""
	@echo "‚öôÔ∏è –†–ê–ó–†–ê–ë–û–¢–ö–ê:"
	@echo "  dev          - –ó–∞–ø—É—Å—Ç–∏—Ç—å –≤ —Ä–µ–∂–∏–º–µ —Ä–∞–∑—Ä–∞–±–æ—Ç–∫–∏"
	@echo "  build        - –°–æ–±—Ä–∞—Ç—å –≤—Å–µ –ø–∞–∫–µ—Ç—ã"
	@echo "  test         - –ó–∞–ø—É—Å—Ç–∏—Ç—å —Ç–µ—Å—Ç—ã"
	@echo "  lint         - –ü—Ä–æ–≤–µ—Ä–∏—Ç—å –∫–æ–¥"
	@echo ""
	@echo "üîß –£–¢–ò–õ–ò–¢–´:"
	@echo "  db-setup     - –ù–∞—Å—Ç—Ä–æ–∏—Ç—å –±–∞–∑—É –¥–∞–Ω–Ω—ã—Ö"
	@echo "  health       - –ü—Ä–æ–≤–µ—Ä–∏—Ç—å —Å–æ—Å—Ç–æ—è–Ω–∏–µ —Å–µ—Ä–≤–∏—Å–æ–≤"
	@echo "  logs         - –ü–æ–∫–∞–∑–∞—Ç—å –ª–æ–≥–∏"
	@echo "  clean        - –û—á–∏—Å—Ç–∏—Ç—å –≤—Ä–µ–º–µ–Ω–Ω—ã–µ —Ñ–∞–π–ª—ã"

# –ü—Ä–æ–≤–µ—Ä–∫–∞ —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–Ω—ã—Ö –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–µ–π
check-deps:
	@echo "–ü—Ä–æ–≤–µ—Ä–∫–∞ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–µ–π..."
	@echo ""
	@echo "Node.js:"
	@if command -v node >/dev/null 2>&1; then \
		echo "‚úÖ Node.js: $$(node --version)"; \
	else \
		echo "‚ùå Node.js –Ω–µ —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω"; \
		echo "üìñ –£—Å—Ç–∞–Ω–æ–≤–∏—Ç–µ Node.js: https://nodejs.org/"; \
	fi
	@echo ""
	@echo "npm:"
	@if command -v npm >/dev/null 2>&1; then \
		echo "‚úÖ npm: $$(npm --version)"; \
	else \
		echo "‚ùå npm –Ω–µ —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω"; \
	fi
	@echo ""
	@echo "Docker:"
	@if command -v docker >/dev/null 2>&1; then \
		echo "‚úÖ Docker: $$(docker --version)"; \
		if docker compose version >/dev/null 2>&1; then \
			echo "‚úÖ Docker Compose: $$(docker compose version --short)"; \
		else \
			echo "‚ùå Docker Compose –Ω–µ –¥–æ—Å—Ç—É–ø–µ–Ω"; \
		fi; \
	else \
		echo "‚ùå Docker –Ω–µ —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω"; \
		echo "üìñ –£—Å—Ç–∞–Ω–æ–≤–∏—Ç–µ Docker Desktop: https://www.docker.com/products/docker-desktop/"; \
	fi
	@echo ""
	@echo "üìñ –ü–æ–ª–Ω–∞—è –∏–Ω—Å—Ç—Ä—É–∫—Ü–∏—è –ø–æ —É—Å—Ç–∞–Ω–æ–≤–∫–µ –≤ INSTALLATION.md"

# –£—Å—Ç–∞–Ω–æ–≤–∫–∞ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–µ–π
install:
	@echo "–£—Å—Ç–∞–Ω–æ–≤–∫–∞ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–µ–π..."
	@if ! command -v node >/dev/null 2>&1; then \
		echo "‚ùå Node.js –Ω–µ –Ω–∞–π–¥–µ–Ω! –£—Å—Ç–∞–Ω–æ–≤–∏—Ç–µ Node.js —Å–Ω–∞—á–∞–ª–∞."; \
		echo "üìñ –°–º–æ—Ç—Ä–∏—Ç–µ INSTALLATION.md"; \
		exit 1; \
	fi
	npm install

# –ó–∞–ø—É—Å–∫ –≤—Å–µ—Ö —Å–µ—Ä–≤–∏—Å–æ–≤ —Å Docker Compose
docker-up:
	@echo "–ó–∞–ø—É—Å–∫ –≤—Å–µ—Ö —Å–µ—Ä–≤–∏—Å–æ–≤ —Å Docker Compose..."
	@if command -v docker-compose >/dev/null 2>&1; then \
		docker-compose up -d; \
	elif command -v docker >/dev/null 2>&1 && docker compose version >/dev/null 2>&1; then \
		docker compose up -d; \
	else \
		echo "‚ùå Docker –Ω–µ —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω!"; \
		echo "üìñ –°–º–æ—Ç—Ä–∏—Ç–µ –∏–Ω—Å—Ç—Ä—É–∫—Ü–∏–∏ –≤ INSTALLATION.md"; \
		echo "üîó –°–∫–∞—á–∞–π—Ç–µ Docker Desktop: https://www.docker.com/products/docker-desktop/"; \
		exit 1; \
	fi

# –û—Å—Ç–∞–Ω–æ–≤–∫–∞ –≤—Å–µ—Ö —Å–µ—Ä–≤–∏—Å–æ–≤
docker-down:
	@echo "–û—Å—Ç–∞–Ω–æ–≤–∫–∞ –≤—Å–µ—Ö —Å–µ—Ä–≤–∏—Å–æ–≤..."
	@if command -v docker-compose >/dev/null 2>&1; then \
		docker-compose down; \
	elif command -v docker >/dev/null 2>&1 && docker compose version >/dev/null 2>&1; then \
		docker compose down; \
	else \
		echo "‚ùå Docker –Ω–µ –Ω–∞–π–¥–µ–Ω"; \
	fi

# –ü—Ä–æ—Å–º–æ—Ç—Ä –ª–æ–≥–æ–≤ –≤—Å–µ—Ö —Å–µ—Ä–≤–∏—Å–æ–≤
docker-logs:
	@echo "–õ–æ–≥–∏ –≤—Å–µ—Ö —Å–µ—Ä–≤–∏—Å–æ–≤..."
	@if command -v docker-compose >/dev/null 2>&1; then \
		docker-compose logs; \
	elif command -v docker >/dev/null 2>&1 && docker compose version >/dev/null 2>&1; then \
		docker compose logs; \
	else \
		echo "‚ùå Docker –Ω–µ –Ω–∞–π–¥–µ–Ω"; \
	fi

# –õ–æ–≥–∏ –∫–æ–Ω–∫—Ä–µ—Ç–Ω–æ–≥–æ —Å–µ—Ä–≤–∏—Å–∞
logs-%:
	@echo "–õ–æ–≥–∏ —Å–µ—Ä–≤–∏—Å–∞ $*..."
	docker-compose logs -f $*

# –û—á–∏—Å—Ç–∫–∞ Docker
docker-clean:
	@echo "–û—á–∏—Å—Ç–∫–∞ Docker..."
	docker-compose down -v
	docker system prune -f

# –ù–∞—Å—Ç—Ä–æ–π–∫–∞ –±–∞–∑—ã –¥–∞–Ω–Ω—ã—Ö
db-setup:
	@echo "–ù–∞—Å—Ç—Ä–æ–π–∫–∞ –±–∞–∑—ã –¥–∞–Ω–Ω—ã—Ö..."
	sleep 10
	docker-compose exec postgres psql -U postgres -d gov_platform -c "SELECT 1;"
	@echo "–ë–∞–∑–∞ –¥–∞–Ω–Ω—ã—Ö –≥–æ—Ç–æ–≤–∞!"

# –ü–æ–¥–∫–ª—é—á–µ–Ω–∏–µ –∫ –±–∞–∑–µ –¥–∞–Ω–Ω—ã—Ö
db-connect:
	@echo "–ü–æ–¥–∫–ª—é—á–µ–Ω–∏–µ –∫ –±–∞–∑–µ –¥–∞–Ω–Ω—ã—Ö..."
	docker-compose exec postgres psql -U postgres -d gov_platform

# –ü—Ä–æ–≤–µ—Ä–∫–∞ —Å–æ—Å—Ç–æ—è–Ω–∏—è –≤—Å–µ—Ö —Å–µ—Ä–≤–∏—Å–æ–≤
health:
	@echo "–ü—Ä–æ–≤–µ—Ä–∫–∞ —Å–æ—Å—Ç–æ—è–Ω–∏—è —Å–µ—Ä–≤–∏—Å–æ–≤..."
	@curl -s http://localhost:8080/health | jq '.' || echo "API Gateway –Ω–µ–¥–æ—Å—Ç—É–ø–µ–Ω"
	@curl -s http://localhost:3001/api/v1/health | jq '.' || echo "Auth Service –Ω–µ–¥–æ—Å—Ç—É–ø–µ–Ω"
	@curl -s http://localhost:3002/api/v1/health | jq '.' || echo "User Service –Ω–µ–¥–æ—Å—Ç—É–ø–µ–Ω"
	@curl -s http://localhost:3003/api/v1/health | jq '.' || echo "Chat Service –Ω–µ–¥–æ—Å—Ç—É–ø–µ–Ω"
	@curl -s http://localhost:3004/api/v1/health | jq '.' || echo "File Service –Ω–µ–¥–æ—Å—Ç—É–ø–µ–Ω"

# –†–∞–∑—Ä–∞–±–æ—Ç–∫–∞ –≤—Å–µ—Ö —Å–µ—Ä–≤–∏—Å–æ–≤ —Å Turbo
dev:
	@echo "–ó–∞–ø—É—Å–∫ –≤—Å–µ—Ö —Å–µ—Ä–≤–∏—Å–æ–≤ –≤ —Ä–µ–∂–∏–º–µ —Ä–∞–∑—Ä–∞–±–æ—Ç–∫–∏ —Å Turbo..."
	@if ! command -v node >/dev/null 2>&1; then \
		echo "‚ùå Node.js –Ω–µ –Ω–∞–π–¥–µ–Ω!"; \
		echo "üìñ –£—Å—Ç–∞–Ω–æ–≤–∏—Ç–µ Node.js: https://nodejs.org/"; \
		exit 1; \
	fi
	npm run dev

# –†–∞–∑—Ä–∞–±–æ—Ç–∫–∞ –æ—Ç–¥–µ–ª—å–Ω—ã—Ö —Å–µ—Ä–≤–∏—Å–æ–≤
auth-dev:
	@echo "–ó–∞–ø—É—Å–∫ Auth Service –≤ —Ä–µ–∂–∏–º–µ —Ä–∞–∑—Ä–∞–±–æ—Ç–∫–∏..."
	npm run dev --workspace=@gov-platform/auth-service

user-dev:
	@echo "–ó–∞–ø—É—Å–∫ User Service –≤ —Ä–µ–∂–∏–º–µ —Ä–∞–∑—Ä–∞–±–æ—Ç–∫–∏..."
	npm run dev --workspace=@gov-platform/user-service

chat-dev:
	@echo "–ó–∞–ø—É—Å–∫ Chat Service –≤ —Ä–µ–∂–∏–º–µ —Ä–∞–∑—Ä–∞–±–æ—Ç–∫–∏..."
	npm run dev --workspace=@gov-platform/chat-service

file-dev:
	@echo "–ó–∞–ø—É—Å–∫ File Service –≤ —Ä–µ–∂–∏–º–µ —Ä–∞–∑—Ä–∞–±–æ—Ç–∫–∏..."
	npm run dev --workspace=@gov-platform/file-service

gateway-dev:
	@echo "–ó–∞–ø—É—Å–∫ API Gateway –≤ —Ä–µ–∂–∏–º–µ —Ä–∞–∑—Ä–∞–±–æ—Ç–∫–∏..."
	npm run dev --workspace=@gov-platform/api-gateway

# –°–±–æ—Ä–∫–∞
build:
	@echo "–°–±–æ—Ä–∫–∞ –≤—Å–µ—Ö –ø–∞–∫–µ—Ç–æ–≤..."
	npm run build

# –¢–µ—Å—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ
test:
	@echo "–ó–∞–ø—É—Å–∫ —Ç–µ—Å—Ç–æ–≤..."
	npm run test

# –ü—Ä–æ–≤–µ—Ä–∫–∞ –∫–æ–¥–∞
lint:
	@echo "–ü—Ä–æ–≤–µ—Ä–∫–∞ –∫–æ–¥–∞..."
	npm run lint

# –ü—Ä–æ—Å–º–æ—Ç—Ä –ª–æ–≥–æ–≤
logs:
	@echo "–õ–æ–≥–∏ —Å–µ—Ä–≤–∏—Å–æ–≤..."
	docker-compose logs -f

# –û—á–∏—Å—Ç–∫–∞
clean:
	@echo "–û—á–∏—Å—Ç–∫–∞ –≤—Ä–µ–º–µ–Ω–Ω—ã—Ö —Ñ–∞–π–ª–æ–≤..."
	rm -rf node_modules/.cache
	rm -rf apps/*/dist
	rm -rf packages/*/dist
	npm run clean

# Backup –±–∞–∑—ã –¥–∞–Ω–Ω—ã—Ö
backup:
	@echo "–°–æ–∑–¥–∞–Ω–∏–µ backup –±–∞–∑—ã –¥–∞–Ω–Ω—ã—Ö..."
	docker-compose exec postgres pg_dump -U postgres gov_platform > backup-$(shell date +%Y%m%d_%H%M%S).sql
	@echo "Backup —Å–æ–∑–¥–∞–Ω: backup-$(shell date +%Y%m%d_%H%M%S).sql"

# Restore –±–∞–∑—ã –¥–∞–Ω–Ω—ã—Ö
restore:
	@echo "–í–æ—Å—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∏–µ –±–∞–∑—ã –¥–∞–Ω–Ω—ã—Ö –∏–∑ backup..."
	@read -p "–í–≤–µ–¥–∏—Ç–µ –∏–º—è —Ñ–∞–π–ª–∞ backup: " file; \
	docker-compose exec -T postgres psql -U postgres gov_platform < $$file

# –†–µ—Å—Ç–∞—Ä—Ç –≤—Å–µ—Ö —Å–µ—Ä–≤–∏—Å–æ–≤
restart:
	@echo "–ü–µ—Ä–µ–∑–∞–ø—É—Å–∫ –≤—Å–µ—Ö —Å–µ—Ä–≤–∏—Å–æ–≤..."
	docker-compose restart

# –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–µ–π
update:
	@echo "–û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–µ–π..."
	npm update

# –£—Å—Ç–∞–Ω–æ–≤–∫–∞ –Ω–æ–≤–æ–π –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏
install-dep:
	@read -p "–í–≤–µ–¥–∏—Ç–µ –Ω–∞–∑–≤–∞–Ω–∏–µ –ø–∞–∫–µ—Ç–∞: " package; \
	npm install $$package

# –ü–æ–∫–∞–∑–∞—Ç—å —Å—Ç–∞—Ç—É—Å –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–æ–≤
status:
	@echo "–°—Ç–∞—Ç—É—Å –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–æ–≤:"
	docker-compose ps

# –ú–æ–Ω–∏—Ç–æ—Ä–∏–Ω–≥ —Ä–µ—Å—É—Ä—Å–æ–≤
monitor:
	@echo "–ú–æ–Ω–∏—Ç–æ—Ä–∏–Ω–≥ —Ä–µ—Å—É—Ä—Å–æ–≤..."
	docker stats

# –ü—Ä–æ–≤–µ—Ä–∫–∞ –ø–æ—Ä—Ç–æ–≤
ports:
	@echo "–ò—Å–ø–æ–ª—å–∑—É–µ–º—ã–µ –ø–æ—Ä—Ç—ã:"
	@echo "3001 - Auth Service"
	@echo "3002 - User Service"
	@echo "3003 - Chat Service"
	@echo "3004 - File Service"
	@echo "8080 - API Gateway"
	@echo "5432 - PostgreSQL"
	@echo "6379 - Redis"
	@echo "9200 - Elasticsearch"
	@echo "9000 - MinIO API"
	@echo "9001 - MinIO Console"
	@echo "5672 - RabbitMQ"
	@echo "15672 - RabbitMQ Management"

# Alternative: local development without full Docker
dev-local:
	@echo "üîß –ó–∞–ø—É—Å–∫ –ª–æ–∫–∞–ª—å–Ω–æ–π —Ä–∞–∑—Ä–∞–±–æ—Ç–∫–∏..."
	@echo "–≠—Ç–æ—Ç —Ä–µ–∂–∏–º –∑–∞–ø—É—Å–∫–∞–µ—Ç —Å–µ—Ä–≤–∏—Å—ã –ª–æ–∫–∞–ª—å–Ω–æ (–Ω—É–∂–µ–Ω Node.js)"
	@echo ""
	@if ! command -v node >/dev/null 2>&1; then \
		echo "‚ùå Node.js –Ω–µ –Ω–∞–π–¥–µ–Ω!"; \
		echo "üìñ –£—Å—Ç–∞–Ω–æ–≤–∏—Ç–µ Node.js: https://nodejs.org/"; \
		exit 1; \
	fi
	@echo "‚úÖ Node.js –Ω–∞–π–¥–µ–Ω: $$(node --version)"
	@echo ""
	@echo "üìã –í–∞—Ä–∏–∞–Ω—Ç—ã –∑–∞–ø—É—Å–∫–∞:"
	@echo ""
	@echo "üöÄ –ê–í–¢–û–ú–ê–¢–ò–ß–ï–°–ö–ò (—Ä–µ–∫–æ–º–µ–Ω–¥—É–µ—Ç—Å—è):"
	@echo "   make dev                    # –ó–∞–ø—É—Å—Ç–∏—Ç—å –≤—Å–µ —Å–µ—Ä–≤–∏—Å—ã —Å Turbo"
	@echo ""
	@echo "üîß –í–†–£–ß–ù–£–Æ –≤ –æ—Ç–¥–µ–ª—å–Ω—ã—Ö —Ç–µ—Ä–º–∏–Ω–∞–ª–∞—Ö:"
	@echo "1. cd apps/auth-service && npm install && npm run dev"
	@echo "2. cd apps/user-service && npm install && npm run dev"
	@echo "3. cd apps/chat-service && npm install && npm run dev"
	@echo "4. cd apps/file-service && npm install && npm run dev"
	@echo "5. cd apps/api-gateway && npm install && npm run dev"
	@echo ""
	@echo "üåê –§—Ä–æ–Ω—Ç–µ–Ω–¥: cd ../frontend/frontend-shell && npm install && npm run dev"

# Frontend only development
frontend-only:
	@echo "üé® –î–ª—è –∑–∞–ø—É—Å–∫–∞ —Ç–æ–ª—å–∫–æ —Ñ—Ä–æ–Ω—Ç–µ–Ω–¥–∞:"
	@echo ""
	@echo "cd ../frontend/frontend-shell"
	@echo "npm install"
	@echo "npm run dev"
	@echo ""
	@echo "üìñ –ü–æ–¥—Ä–æ–±–Ω–∞—è –∏–Ω—Å—Ç—Ä—É–∫—Ü–∏—è: ../QUICK_START_NO_DOCKER.md"

# Check what's needed
requirements:
	@echo "üìã –¢—Ä–µ–±–æ–≤–∞–Ω–∏—è –¥–ª—è –∑–∞–ø—É—Å–∫–∞ –ø–ª–∞—Ç—Ñ–æ—Ä–º—ã:"
	@echo ""
	@echo "üîß –û–±—è–∑–∞—Ç–µ–ª—å–Ω–æ:"
	@echo "- Node.js 18+ (–¥–ª—è —Ä–∞–∑—Ä–∞–±–æ—Ç–∫–∏): https://nodejs.org/"
	@echo "- Docker Desktop (–¥–ª—è –ø–æ–ª–Ω–æ–≥–æ —Å—Ç–µ–∫–∞): https://www.docker.com/products/docker-desktop/"
	@echo ""
	@echo "üìä –í–∞—Ä–∏–∞–Ω—Ç—ã –∑–∞–ø—É—Å–∫–∞:"
	@echo "1. 'make quickstart' - –ø–æ–ª–Ω—ã–π —Å—Ç–µ–∫ —Å Docker"
	@echo "2. 'make dev-local' - –∏–Ω—Å—Ç—Ä—É–∫—Ü–∏–∏ –¥–ª—è –ª–æ–∫–∞–ª—å–Ω–æ–π —Ä–∞–∑—Ä–∞–±–æ—Ç–∫–∏"
