# Environment Configuration for Cube Demper OS

# Application
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/cube_demper
DATABASE_SSL=false

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secret-access-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=cube-demper
JWT_AUDIENCE=cube-demper-users

# File Storage (MinIO/S3)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin123
S3_BUCKET=cube-demper-files
S3_REGION=us-east-1

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# External Services
ELASTICSEARCH_URL=http://localhost:9200
RABBITMQ_URL=amqp://rabbitmq:rabbitmq123@localhost:5672

# Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Digital Signature
DIGITAL_SIGNATURE_ALGORITHM=GOST_3410_2012_256
CERTIFICATE_VALIDITY_DAYS=365

# WebRTC Configuration (for calls)
STUN_SERVERS=stun:stun.l.google.com:19302
TURN_SERVER_URL=
TURN_USERNAME=
TURN_PASSWORD=

# Monitoring
SENTRY_DSN=
PROMETHEUS_ENABLED=false

# Development
DEBUG=cube-demper:*
